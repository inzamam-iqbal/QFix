<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:weightSum="1"
    android:layout_height="wrap_content">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="0dp"
        android:layout_weight="0.25"
        android:layout_margin="5dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:gravity="center">

        <ImageView
            android:layout_width="@dimen/grid_width"
            android:layout_height="@dimen/grid_width"
            android:layout_centerHorizontal="true"
            android:src="@drawable/auto"
            android:id="@+id/button_threeWheeler"
            />

        <TextView
            android:layout_marginTop="5dp"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Three Wheeler"
            android:id="@+id/textView_title"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@+id/button_threeWheeler"
            />


    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="0dp"
        android:layout_weight="0.25"
        android:layout_margin="5dp"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:layout_width="@dimen/grid_width"
            android:layout_height="@dimen/grid_width"
            android:layout_centerHorizontal="true"
            android:src="@drawable/nano"
            android:id="@+id/button_nano"
            />

        <TextView
            android:layout_marginTop="5dp"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Nano"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@+id/button_nano"
            />


    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_margin="5dp"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:layout_width="@dimen/grid_width"
            android:layout_height="@dimen/grid_width"
            android:layout_centerHorizontal="true"
            android:src="@drawable/car"
            android:id="@+id/button_car"
            />

        <TextView
            android:layout_marginTop="5dp"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Car"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@+id/button_car"
            />


    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"

        android:gravity="center">

        <ImageView
            android:layout_width="@dimen/grid_width"
            android:layout_height="@dimen/grid_width"
            android:layout_centerHorizontal="true"
            android:src="@drawable/van"
            android:id="@+id/button_van"
            />

        <TextView
            android:layout_marginTop="5dp"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Van"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@+id/button_van"
            />


    </RelativeLayout>




