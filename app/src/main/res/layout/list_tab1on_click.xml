<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/image_listView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="2dp"
            android:padding="5dp"
            android:src="@drawable/img1"
            app:civ_border_width="2dp"
            app:civ_border_color="#313131"/>


        <TextView
            android:paddingTop="5dp"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Sajeer Ahamed"
            android:id="@+id/textView_title"
            android:layout_toRightOf="@+id/image_listView"
            android:layout_toEndOf="@+id/image_listView" />

        <TextView
            android:padding="5dp"
            android:text="21 years"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/catagory_employee_age"
            android:layout_gravity="right"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />



        <TextView
            android:text="busy right now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/catagory_employee_status"
            android:layout_below="@+id/distance_listView"
            android:layout_toRightOf="@+id/image_listView"
            android:layout_toEndOf="@+id/image_listView" />


        <TextView
            android:text="20km away"
            android:id="@+id/distance_listView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_title"
            android:layout_toRightOf="@+id/image_listView"
            android:layout_toEndOf="@+id/image_listView" />

        <ImageView
            android:layout_marginRight="50dp"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/catagory_employee_homeservice_img"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/catagory_employee_age" />
</RelativeLayout>